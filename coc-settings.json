{
  "workspace.ignoredFolders": ["$HOME", "$HOME/.cargo/**", "$HOME/.rustup/**"],
  "suggest.noselect": true,
  "html.format.enable": false,
  "languageserver": {
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": ["build/"],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "go": {
      "command": "gopls",
      "args": ["serve", "-debug", "0.0.0.0:8484", "-rpc.trace"],
      "rootPatterns": ["go.mod", "go.work", ".vim/", ".git/"],
      "trace.server": "verbose",
      "filetypes": ["go"],
      "initializationOptions": {}
    },
    "sourcekit-lsp": {
      "filetypes": ["swift"],
      "command": "sourcekit-lsp"
    },
    "gradle": {
      "command": "gradle-language-server",
      "rootPatterns": ["settings.gradle", "build.gradle"],
      "filetypes": ["groovy"],
      "initializationOptions": {
        "settings": {
          "gradleWrapperEnabled": true
        }
      }
    }
  },
  "coc.preferences.extensionUpdateCheck": "daily",
  "snippets.ultisnips.pythonPrompt": false,
  "[typescript][json][html][javascript]": {
    "coc.preferences.formatOnSave": true
  },
  "snippets.extends": {
    "dart": ["dart", "flutter"]
  },
  "sql.formatOptions": {
    "keywordCase": "upper"
  },
  "sql.database": "postgresql",
  "java.saveActions.organizeImports": true,
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/18.1.3/clangd_18.1.3/bin/clangd"
}
